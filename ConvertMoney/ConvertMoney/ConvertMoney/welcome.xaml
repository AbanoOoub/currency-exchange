                <Label Text="m" x:Name="m" FontSize="40" d:AutomationProperties.IsInAccessibleTree="False" FontAttributes="Bold" TextColor="#094106"/>
                <Label Text="e" x:Name="e2" FontSize="40" d:AutomationProperties.IsInAccessibleTree="False" FontAttributes="Bold" TextColor="#094106"/>

